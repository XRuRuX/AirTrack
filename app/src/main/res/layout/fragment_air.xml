<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".AirFragment">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/menu_item_color"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_top_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/air_top_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:translationY="-50dp"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/tv_aqi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="103"
                        android:textColor="@color/primary_white"
                        android:layout_marginBottom="-35dp"
                        android:textSize="130sp" />

                    <TextView
                        android:id="@+id/tv_aqi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air Quality Index"
                        android:textColor="@color/gray_white"
                        android:textSize="20sp" />
                </LinearLayout>
            </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="-35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_aqi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="1dp"
                        android:text="AQI"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="1dp"
                        android:text="0"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_aqi"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_AQI"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_pm25_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="PM2.5"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="0 µg/m³"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_pm25"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="30dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="-1"
                        android:scaleY="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_pm25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_pm10_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="PM10"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_pm10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="0 µg/m³"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_pm10"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_pm10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_pm10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_ozone_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="Ozone (O₃)"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_ozone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="0 ppb"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ozone"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_ozone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="-1"
                        android:scaleY="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_ozone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_co_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="Carbon monoxide (CO)"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="0 ppm"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_co"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_co"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_no2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="Nitrogen dioxide (NO₂)"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_live_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="1dp"
                        android:text="0 ppb"
                        android:textColor="@color/primary_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_no2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardBackgroundColor="@color/dark_green"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_leaves_chart_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.03"
                        android:scaleType="fitEnd"
                        android:scaleX="-1"
                        android:scaleY="1"
                        android:src="@drawable/long_green_leaves" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart_no2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </com.github.mikephil.charting.charts.LineChart>

                </androidx.cardview.widget.CardView>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
